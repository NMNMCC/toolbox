{
	"nodeModulesDir": "none",
	"name": "@nmnm/toolbox",
	"version": "0.0.1",
	"exports": {
		".": "./_.ts"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-explicit-any"
			]
		}
	},
	"imports": {
		"@standard-community/standard-json": "npm:@standard-community/standard-json@^0.3.5",
		"@standard-schema/spec": "npm:@standard-schema/spec@^1.0.0",
		"@std/assert": "jsr:@std/assert@^1.0.15",
		"dotenv": "npm:dotenv@^17.2.3",
		"openai": "npm:openai@^6.3.0",
		"pino": "npm:pino@^10.0.0",
		"pino-pretty": "npm:pino-pretty@^13.1.2",
		"zod": "npm:zod@^4.1.12"
	},
	"fmt": {
		"useTabs": true,
		"indentWidth": 4,
		"newLineKind": "lf",
		"useBraces": "always",
		"semiColons": false,
		"trailingCommas": "onlyMultiLine",
		"spaceSurroundingProperties": false,
		"spaceAround": false
	}
}
