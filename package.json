{
	"type": "module",
	"name": "@nmnmcc/toolbox",
	"version": "0.3.0",
	"scripts": {
		"build": "tsup ./src/mod.ts ./src/util.ts --format esm --dts --clean",
		"check": "tsc",
		"format": "prettier -w ./**"
	},
	"exports": {
		".": {
			"types": "./dist/mod.d.ts",
			"import": "./dist/mod.js"
		},
		"./util": {
			"types": "./dist/util.d.ts",
			"import": "./dist/util.js"
		}
	},
	"files": [
		"./src",
		"./dist",
		"./README.md"
	],
	"license": "LGPL-2.1-or-later",
	"packageManager": "pnpm@10.15.0",
	"peerDependencies": {
		"openai": ">=6",
		"zod": ">=4"
	},
	"devDependencies": {
		"@types/node": "^24.9.1",
		"prettier": "^3.6.2",
		"tsup": "^8.5.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.4"
	}
}
