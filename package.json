{
	"type": "module",
	"name": "@nmnmcc/toolbox",
	"version": "0.4.0",
	"scripts": {
		"build": "tsup ./src/mod.ts ./src/util.ts ./src/middlewares/*.ts --format esm --dts --clean",
		"check": "tsc",
		"format": "prettier -w ./**"
	},
	"exports": {
		".": {
			"types": "./dist/mod.d.ts",
			"import": "./dist/mod.js"
		},
		"./middlewares/*": {
			"types": "./dist/middlewares/*.d.ts",
			"import": "./dist/middlewares/*.js"
		},
		"./util": {
			"types": "./dist/util.d.ts",
			"import": "./dist/util.js"
		}
	},
	"files": [
		"./src",
		"./dist",
		"./README.md"
	],
	"license": "LGPL-2.1-or-later",
	"packageManager": "pnpm@10.15.0",
	"peerDependencies": {
		"openai": "^6",
		"zod": "^4"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"prettier": "^3.6.2",
		"tsup": "^8.5.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.8"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.21.1",
		"zod-to-json-schema": "^3.24.6"
	}
}
